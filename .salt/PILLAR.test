# think that dicts are updated/merged with default
# but lists are overidden
{% set dom = grains['fqdn'].split('.')[1:] %}
{% if not dom %}
{% set dom = [grains['fqdn']] %}
{% endif %}
{% set domain = dom|join('.') %}
makina-projects.gitlabrunner:
  api_version: '2'
  data:
    register_token: "B7eYuMH-jbiAGUmQg9i3"
    runner_config:
      runners:
        {{grains['fqdn']}}:
          url: "https://gitlab.{{domain}}"
          tags_list: 
            - makina-states
            - lxc_python
            - lxc_drupal
            - "{{grains['fqdn']}}"
